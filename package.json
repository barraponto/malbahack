{
  "name": "malbahack",
  "version": "0.1.0",
  "description": "Malba Glosario reverse-engineered",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run data && neutrino start",
    "build": "npm run data && neutrino build",
    "data": "m2j --content --outfile src/data.json data/*.md",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "postcss": {
    "plugins": {
      "postcss-cssnext": {}
    }
  },
  "config": {
    "presets": [
      "neutrino-preset-eslint-google",
      "neutrino-preset-stylelint-standard",
      "neutrino-preset-web",
      "neutrino-preset-postcss",
      "neutrino-preset-vue"
    ],
    "stylelint": {
      "extends": "stylelint-config-standard"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barraponto/webpack-config.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "Capi Etheriel <barraponto@gmail.com> (https://barraponto.blog.br)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/barraponto/webpack-config/issues"
  },
  "homepage": "https://github.com/barraponto/webpack-config#readme",
  "devDependencies": {
    "neutrino": "^4.3.1",
    "neutrino-preset-eslint-google": "^1.0.0",
    "neutrino-preset-postcss": "^1.0.0",
    "neutrino-preset-stylelint-standard": "^1.0.0",
    "neutrino-preset-vue": "^1.0.3",
    "neutrino-preset-web": "^4.2.3",
    "postcss-cssnext": "^2.10.0"
  },
  "dependencies": {
    "markdown-to-json": "^0.5.1",
    "vue": "^2.2.4",
    "vue-router": "^2.3.0"
  }
}
